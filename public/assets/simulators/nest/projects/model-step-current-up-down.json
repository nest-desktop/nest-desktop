{
  "name": "step current (up/down) to model",
  "network": {
    "nodes": [
      {
        "model": "step_current_generator",
        "params": [
          {
            "id": "amplitude_times",
            "value": [100, 300, 500, 700]
          },
          {
            "id": "amplitude_values",
            "value": [1, 0, -1, 0]
          }
        ],
        "view": {
          "position": { "x": 25, "y": 75 }
        }
      },
      {
        "model": "iaf_psc_alpha",
        "view": {
          "position": { "x": 175, "y": 25 }
        }
      },
      {
        "model": "voltmeter",
        "params": [{ "id": "interval", "value": 0.1 }],
        "view": {
          "position": { "x": 325, "y": 75 }
        }
      }
    ],
    "connections": [
      { "source": 0, "target": 1 },
      { "source": 2, "target": 1 }
    ]
  },
  "simulation": {
    "kernel": { "localNumThreads": 1, "resolution": 0.1, "rngSeed": 1 },
    "time": 1000
  },
  "version": "3.2.0"
}
