          },
          {
            "id": "amplitude_values",
            "value": [1, 0, -1, 0],
            "visible": true
          }
        ]
      },
      {
        "model": "iaf_psc_alpha",
        "size": 1,
        "view": {
          "position": {
            "x": 200,
            "y": 50
          }
        },
        "params": []
      },
      {
        "model": "voltmeter",
        "view": {
          "position": {
            "x": 350,
            "y": 100
          }
        },
        "params": [
          {
            "id": "interval",
            "value": 0.1,
            "visible": true
          }
        ]
      }
    ],
    "connections": [
      {
        "source": 0,
        "target": 1
      },
      {
        "source": 2,
        "target": 1
      }
    ]
  },
  "simulation": {
    "kernel": { "localNumThreads": 1, "resolution": 0.1, "rngSeed": 1 },
