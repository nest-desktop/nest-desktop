def simulateSpikes(neuron, connection_layer, stimulator, offset=0):
    output, state = neuron(connection_layer(stimulator))
    spikes = np.argwhere(output.detach().numpy() == 1)
    return {"times": spikes[:,0], "senders": spikes[:,1] + offset}
